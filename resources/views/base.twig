<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
		<link rel="stylesheet" href="{{ asset('style.css') }}" type="text/css" />
		
		<title>{% block title %}Base{% endblock %}{{ config_get('app.name') }}</title>
		
	</head>
	<body>
		<script src="{{ asset('jquery.js') }}"></script>
		<script>
			$(document).ready(function(){
				
			});
		</script>
		
		<ul>
			{% if auth_check() %}
				<li><a href="{{ url('/auth/logout') }}">Logout</a> [{{ auth_user().name }}]</li>
				<li><a href="{{ route('home') }}">Home</a></li>
			{% else %}
				<li>User: Gast</li>
				<li><a href="{{ route('index') }}">Index</a></li>
				<li><a href="{{ url('/auth/login') }}">Login</a></li>
				<li><a href="{{ url('/auth/register') }}">Register</a></li>
			{% endif %}
			
			{% if auth_check() %}
				<li><a href="{{ route('person.list') }}">Persons</a> | <a href="{{ route('person.create') }}">Create</a> | <a href="{{ route('person.search.input') }}">Search</a></li>
			{% endif %}
			
		</ul>
		
		{% block body %}Base{% endblock %}
		
		<p><a href="https://github.com/TheFox/persons">Persons</a> v{{ config_get('app.version') }} </p>
		
		<script>
			{% block javascript %}{% endblock %}
		</script>
	</body>
</html>
