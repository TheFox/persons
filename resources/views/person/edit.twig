
{% extends 'base.twig' %}

{% block title %}Edit - {% endblock %}

{% block body %}
	
	<h2>Edit</h2>
	
	{% if errors | length %}
		<ul>
			{% for error in errors.all %}
				<li> {{ error }} </li>
			{% endfor %}
		</ul>
	{% endif %}
	
	<p>[<a href="{{ route('person.show', person.id) }}">show</a>]</p>
	
	{% include 'person.fields.twig' with {'route': route('person.update', person.id)} %}
	
{% endblock %}

{% block javascript %}
	$(document).ready(function(){
		$('input[type=text]:first').focus();
	});
{% endblock %}
