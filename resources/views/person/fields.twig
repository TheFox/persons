
<form action="{{ route }}" method="post">
	<input type="hidden" name="_token" value="{{ csrf_token() }}">
	
	<table border="1" cellspacing="1" cellpadding="1">
		<tr><td colspan="2"><input type="submit" value="Save" class="submit"></td></tr>
		
		<tr>
			<td valign="top">Last Name</td>
			<td valign="top"><input type="text" name="last_name" value="{{ person.last_name }}" size="50"></td>
		</tr>
		<tr>
			<td valign="top">Middle Name</td>
			<td valign="top"><input type="text" name="middle_name" value="{{ person.middle_name }}" size="50"></td>
		</tr>
		<tr>
			<td valign="top">First Name</td>
			<td valign="top"><input type="text" name="first_name" value="{{ person.first_name }}" size="50"></td>
		</tr>
		<tr>
			<td valign="top">Birthday</td>
			{% if person.birthday %}
				<td valign="top"><input type="text" name="birthday_year" value="{{ person.birthday | date('Y') }}" size="4">-<input type="text" name="birthday_month" value="{{ person.birthday | date('m') }}" size="2">-<input type="text" name="birthday_day" value="{{ person.birthday | date('d') }}" size="2"></td>
			{% else %}
				<td valign="top"><input type="text" name="birthday_year" value="" size="4">-<input type="text" name="birthday_month" value="" size="2">-<input type="text" name="birthday_day" value="" size="2"></td>
			{% endif %}
		</tr>
		<tr>
			<td valign="top">Deceased At</td>
			{% if person.deceased_at %}
				<td valign="top"><input type="text" name="deceased_at_year" value="{{ person.deceased_at | date('Y') }}" size="4">-<input type="text" name="deceased_at_month" value="{{ person.deceased_at | date('m') }}" size="2">-<input type="text" name="deceased_at_day" value="{{ person.deceased_at | date('d') }}" size="2"></td>
			{% else %}
				<td valign="top"><input type="text" name="deceased_at_year" value="" size="4">-<input type="text" name="deceased_at_month" value="" size="2">-<input type="text" name="deceased_at_day" value="" size="2"></td>
			{% endif %}
		</tr>
		<tr>
			<td valign="top">First Met At</td>
			{% if person.first_met_at %}
				<td valign="top"><input type="text" name="first_met_at_year" value="{{ person.first_met_at | date('Y') }}" size="4">-<input type="text" name="first_met_at_month" value="{{ person.first_met_at | date('m') }}" size="2">-<input type="text" name="first_met_at_day" value="{{ person.first_met_at | date('d') }}" size="2"></td>
			{% else %}
				<td valign="top"><input type="text" name="first_met_at_year" value="" size="4">-<input type="text" name="first_met_at_month" value="" size="2">-<input type="text" name="first_met_at_day" value="" size="2"></td>
			{% endif %}
		</tr>
		<tr>
			<td valign="top">Comment</td>
			<td valign="top"><textarea name="comment" rows="10" cols="30">{{ person.comment }}</textarea></td>
		</tr>
		
		<tr><td colspan="2"><input type="submit" value="Save" class="submit"></td></tr>
	</table>
</form>
