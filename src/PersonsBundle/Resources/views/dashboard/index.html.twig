        <tr>
            <td colspan="5"><b>{{ 'common.new' | trans }}</b></td>
        </tr>
        <tr>
            <td>&nbsp;</td>
            <td>&nbsp;</td>
            <td>{{ 'person.id' | trans({}, 'entity') }}</td>
